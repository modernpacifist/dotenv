mode "resize" {
    bindsym h resize shrink width 1 px or 1 ppt
    bindsym j resize grow height 1 px or 1 ppt
    bindsym k resize shrink height 1 px or 1 ppt
    bindsym l resize grow width 1 px or 1 ppt

    bindsym Mod1+h resize shrink width 5 px or 5 ppt
    bindsym Mod1+j resize grow height 5 px or 5 ppt
    bindsym Mod1+k resize shrink height 5 px or 5 ppt
    bindsym Mod1+l resize grow width 5 px or 5 ppt

    bindsym Shift+h resize shrink width 10 px or 10 ppt
    bindsym Shift+j resize grow height 10 px or 10 ppt
    bindsym Shift+k resize shrink height 10 px or 10 ppt
    bindsym Shift+l resize grow width 10 px or 10 ppt

    bindsym Mod1+space focus mode_toggle

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym --release $mod+r mode "resize"

mode "float-control" {
    bindsym h resize shrink width 1 px or 1 ppt
    bindsym j resize grow height 1 px or 1 ppt
    bindsym k resize shrink height 1 px or 1 ppt
    bindsym l resize grow width 1 px or 1 ppt

    bindsym $mod+h move container left 1 px
    bindsym $mod+j move container down 1 px
    bindsym $mod+k move container up 1 px
    bindsym $mod+l move container right 1 px


    bindsym Mod1+h resize shrink width 20 px or 20 ppt
    bindsym Mod1+j resize grow height 20 px or 20 ppt
    bindsym Mod1+k resize shrink height 20 px or 20 ppt
    bindsym Mod1+l resize grow width 20 px or 20 ppt

    bindsym $mod+Mod1+h move container left 20 px
    bindsym $mod+Mod1+j move container down 20 px
    bindsym $mod+Mod1+k move container up 20 px
    bindsym $mod+Mod1+l move container right 20 px


    bindsym Ctrl+h resize shrink width 40 px or 40 ppt
    bindsym Ctrl+j resize grow height 40 px or 40 ppt
    bindsym Ctrl+k resize shrink height 40 px or 40 ppt
    bindsym Ctrl+l resize grow width 40 px or 40 ppt

    bindsym $mod+Ctrl+h move container left 40 px
    bindsym $mod+Ctrl+j move container down 40 px
    bindsym $mod+Ctrl+k move container up 40 px
    bindsym $mod+Ctrl+l move container right 40 px


    bindsym Shift+h resize shrink width 200 px or 200 ppt
    bindsym Shift+j resize grow height 200 px or 200 ppt
    bindsym Shift+k resize shrink height 200 px or 200 ppt
    bindsym Shift+l resize grow width 200 px or 200 ppt

    bindsym $mod+Shift+h move container left 200 px
    bindsym $mod+Shift+j move container down 200 px
    bindsym $mod+Shift+k move container up 200 px
    bindsym $mod+Shift+l move container right 200 px

    bindsym minus exec DiagonalResize -size -40
    bindsym Shift+minus exec DiagonalResize -size -200

    bindsym equal exec DiagonalResize -size 40
    bindsym Shift+plus exec DiagonalResize -size 200

    bindsym Mod1+space focus mode_toggle

    bindsym Return mode "default" exec ManageFloatContainer --save
    bindsym Escape mode "default" exec ManageFloatContainer --save
}

bindsym --release $mod+Mod1+r mode "float-control"

mode "ScaleFloatWindow" {
    # for borderline resize
    bindsym --release grave exec --no-startup-id ScaleFloatWindow -mode r

    bindsym --release w exec --no-startup-id ScaleFloatWindow --mode w
    bindsym --release s exec --no-startup-id ScaleFloatWindow --mode s
    bindsym --release d exec --no-startup-id ScaleFloatWindow --mode d
    bindsym --release a exec --no-startup-id ScaleFloatWindow --mode a

    bindsym l exec __scale_float_window 1 1
    bindsym k exec __scale_float_window 2 1
    bindsym j exec __scale_float_window 3 1
    bindsym h exec __scale_float_window 4 1

    bindsym Mod1+l exec --no-startup-id __scale_float_window 1 20
    bindsym Mod1+k exec --no-startup-id __scale_float_window 2 20
    bindsym Mod1+j exec --no-startup-id __scale_float_window 3 20
    bindsym Mod1+h exec --no-startup-id __scale_float_window 4 20

    bindsym Ctrl+l exec __scale_float_window 1 40
    bindsym Ctrl+k exec __scale_float_window 2 40
    bindsym Ctrl+j exec __scale_float_window 3 40
    bindsym Ctrl+h exec __scale_float_window 4 40

    bindsym Shift+l exec --no-startup-id __scale_float_window 1 200
    bindsym Shift+k exec --no-startup-id __scale_float_window 2 200
    bindsym Shift+j exec --no-startup-id __scale_float_window 3 200
    bindsym Shift+h exec --no-startup-id __scale_float_window 4 200

    bindsym --release minus exec ScaleFloatWindow --widen -40
    bindsym --release Shift+minus exec ScaleFloatWindow --widen -200

    bindsym --release equal exec ScaleFloatWindow --widen 40
    bindsym --release Shift+plus exec ScaleFloatWindow --widen 200

    bindsym Mod1+space focus mode_toggle

    bindsym Return mode "default" exec ManageFloatContainer --save
    bindsym Escape mode "default" exec ManageFloatContainer --save
}

bindsym --release $mod+Ctrl+Mod1+r mode "ScaleFloatWindow"

