    output primary
    status_command i3status --config $HOME/.config/i3/i3status.conf | i3-keyboard-layout i3status | __get_current_marks | __get_current_track
    position top
    tray_output primary

    colors	{
        background          #000000
        statusline          #ffffff
        separator           #ffffff
        #                   border     backgr.    text
        focused_workspace   #ffffff    #ffffff    #000000
        active_workspace    #222222    #222222    #ffffff
        inactive_workspace  #111111    #111111    #ffffff
        urgent_workspace    #900000    #900000    #ffffff
    }
}

bar {
    output nonprimary
    position top
    mode hide
    tray_output none

    colors	{
        background          #000000
        statusline          #ffffff
        separator           #ffffff
        #                   border     backgr.    text
        focused_workspace   #ffffff    #ffffff    #000000
        active_workspace    #222222    #222222    #ffffff
        inactive_workspace  #111111    #111111    #ffffff
        urgent_workspace    #900000    #900000    #ffffff
    }
}

# For wallpaper
exec_always --no-startup-id feh --bg-fill $HOME/Pictures/wallpaper_skull.jpg

# warpd
exec --no-startup-id warpd 2>> /tmp/i3_waprd_exec.log

# Hide cursor while typing
exec --no-startup-id xbanish 2>> /tmp/i3_exec.log

# Turn off screen dim
exec --no-startup-id __screendim_off

# For language toggle en/ru
bindsym --release $mod+space exec i3-keyboard-layout cycle us ru

# For keyboard speed             dly speed
exec_always --no-startup-id exec xset r rate 225 150

# Env colors
# Class                 border     backgr.    text       indicator  child_border
client.focused          #ffffff    #ffffff    #000000    #000000    #ffffff
client.focused_inactive #222222    #222222    #ffffff    #222222    #222222
client.unfocused        #111111    #111111    #ffffff    #111111    #111111
client.urgent           #900000    #900000    #ffffff    #900000    #900000
client.placeholder      #000000    #000000    #ffffff    #000000    #000000

# For screenshot this command saves your screenshot to your buffer(no copy on your disk)
bindsym --release Print exec flameshot gui
bindsym --release $mod+Shift+s exec flameshot gui

# Enable/Disable touchpad
bindsym --release $mod+Mod1+c exec __touchpad_toggle

# Rofi run
bindsym --release $mod+Shift+m exec rofi -show run -config ~/.config/rofi/config.rasi

# File explorer
bindsym --release $mod+Shift+u exec caja

# Swapping workspaces
bindsym --release $mod+Ctrl+Shift+s exec __swap_workspaces
